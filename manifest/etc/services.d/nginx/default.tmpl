server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root ${DOCUMENT_ROOT};
	index index.php index.html index.htm;

	server_name _;

	location / {
		try_files $uri $uri/ =404;
	}

	location ~ [^/]\.php(/|$) {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/var/run/php-fpm.sock;
	}

	location ~ /\.ht {
		deny all;
	}
}
